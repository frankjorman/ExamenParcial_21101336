<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logocopa" />

    <Button
        android:id="@+id/btnPrizes"
        android:layout_width="120dp"
        android:layout_height="52dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="42dp"
        android:text="PRIZES"
        app:layout_constraintBottom_toTopOf="@+id/btnTeams"
        app:layout_constraintEnd_toEndOf="@+id/btnTeams"
        app:layout_constraintStart_toStartOf="@+id/btnTeams"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/btnStadiums"
        android:layout_width="128dp"
        android:layout_height="55dp"
        android:layout_marginBottom="152dp"
        android:text="STADIUMS"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/btnTeams"
        app:layout_constraintTop_toBottomOf="@+id/btnTeams" />

    <Button
        android:id="@+id/btnTeams"
        android:layout_width="122dp"
        android:layout_height="54dp"
        android:layout_marginBottom="41dp"
        android:text="TEAMS"
        app:layout_constraintBottom_toTopOf="@+id/btnStadiums"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPrizes" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginBottom="38dp"
        android:text="MENU"
        app:layout_constraintBottom_toTopOf="@+id/btnPrizes"
        app:layout_constraintStart_toStartOf="@+id/btnPrizes"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

</androidx.constraintlayout.widget.ConstraintLayout>